@model IEnumerable<ProjectVersion001.Models.Course>
@{
    ViewBag.Title = "RoomAllocationView";
}


<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.8.24.js" type="text/javascript"></script>

<h2>View Room Allocation</h2>

@using (Html.BeginForm())
{
    <div>
        <b>Select Department</b>
        @Html.DropDownList("DepartmentId", null, "select Please", new { @class = "form-control" })
    </div>
}

<p><br /></p>
<div id="room-data">
    @Html.Partial("~/Views/shared/_RoomAllocationView.cshtml", Model)
</div>

<script type="text/javascript">
    function FillData(id) {
        $('#room-data').load('@Url.Action("AllocatedRoomLoad")', { departmentId: id });
        }

        $(function () {
            $('#DepartmentId').change(function () {
                var id = $('#DepartmentId').val();
                FillData(id);
            });
        });

</script>